package {	import flash.display.Sprite;	import flash.events.Event;	public class main extends Sprite {		private var t_cur=0;//-2*Math.PI;		private var t_int=Math.PI/30;		private var t_max=-2*Math.PI+0.01;		private var tran_amp=100;		private var fps=24;		private var t_turn_cur=4;		private var t_turn_max=4;		private var vel_wlk_dir=0;		private var vel_wlk_cur=0;		private var vel_wlk_rtn=10;		private var vel_wlk_int=2;		private var vel_wlk_max=15;//vel_wlk - intricate relationship - t_int		private var lrb=0;		private var midxstage=stage.stageWidth/2;		private var bound_bg_l=- midxstage+tran_amp;		private var bound_bg_r=0;		public var k:keys;		public var all=new rootbox  ;		public function main() {			addChild(all);			var keyboard_sprite = new Sprite();			addChild(keyboard_sprite);			k=new keys(keyboard_sprite);			stage.addEventListener(Event.ENTER_FRAME,on_enter_frame);			bound_bg_l=- midxstage-tran_amp;			bound_bg_r=- all.bg.width+midxstage+tran_amp;			all.bg.x=bound_bg_l;			all.boxi.y=stage.stageHeight/2;			all.boxi.stop();		}		public function on_enter_frame(event:Event) {			//presets			if ((k.lefti())&&(k.righti())) {				lrb=1;			} else {				lrb=0;			}			//Action			if ((0<t_cur)&&(t_cur<Math.PI)) { //and also < Math.PI					t_cur+=k.lrd()*t_int;			} else {				if (t_cur<=0) {					t_cur=0				}				if (t_cur>=Math.PI) {					t_cur=Math.PI				}				t_cur+=k.lrd()/10000000			}			all.boxi.gotoAndStop(k.lrd()+2);			all.boxi.x=midxstage-tran_amp*Math.cos(t_cur);			//end public function		}	}}